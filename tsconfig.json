{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"lib": ["ESNext", "DOM"],
		"outDir": "./dist",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
